<?xml version="1.1"?>
<launch>

    <node pkg="topic_tools" type="relay" name="remap_limo_scan" args="/limo/scan /scan" />

    <node name="cartographer_node" pkg="cartographer_ros" type="cartographer_node" args="
    -configuration_directory $(find cartographer_ros)/configuration_files
    -configuration_basename build_map_2d.lua">
        <remap from="/limo/odom" to="odom" />
    </node>
    <node name="cartographer_occupancy_grid_node" pkg="cartographer_ros" type="cartographer_occupancy_grid_node" args="-resolution 0.05" />

    <node name="rviz_cartographer" pkg="rviz" type="rviz" required="true" args="-d $(find cartographer_ros)/configuration_files/cartographer.rviz" />  
</launch>
